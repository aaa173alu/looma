<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Producto" table="Producto">
    <id name="Id" column="Id" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="Nombre" column="Nombre" />
    <property name="Descripcion" column="Descripcion" />
    <property name="Precio" column="Precio" />
    <bag name="TallasDisponibles" table="ProductoTallas" lazy="false">
      <key column="ProductoId" />
      <element column="Talla" type="string" />
    </bag>
    <bag name="Fotos" table="ProductoFotos" lazy="false">
      <key column="ProductoId" />
      <element column="Foto" type="string" />
    </bag>
    <property name="Stock" column="Stock" />
    <property name="Destacado" column="Destacado" />
    <property name="Color" column="Color" />
  </class>
</hibernate-mapping>
