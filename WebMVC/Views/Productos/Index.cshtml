@model IEnumerable<ApplicationCore.Domain.EN.Producto>

@{
    ViewData["Title"] = "Catálogo de Zapatos";
}

<h1>@ViewData["Title"]</h1>

@if (Context.Session.GetString("UsuarioRol") == "Admin")
{
    <div class="mb-3">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary btn-sm">
            &larr; Volver al Dashboard
        </a>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Zapato</a>
    <a asp-controller="Account" asp-action="Logout" class="btn btn-secondary">Cerrar Sesión</a>
</p>

<!-- FILTROS CON HQL -->
<div class="card mb-4">
    <div class="card-header">
        <h5>Filtros (ReadFilter con HQL)</h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row">
                <div class="col-md-3">
                    <label>Color:</label>
                    <input type="text" name="color" class="form-control" value="@ViewBag.ColorFilter" placeholder="Negro, Blanco, Azul..." />
                </div>
                <div class="col-md-3">
                    <label>Precio Máximo:</label>
                    <input type="number" name="precioMax" class="form-control" value="@ViewBag.PrecioMaxFilter" step="0.01" placeholder="100.00" />
                </div>
                <div class="col-md-3">
                    <label>Destacados:</label>
                    <select name="destacado" class="form-control">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewBag.DestacadoFilter == true)">Sí ⭐</option>
                        <option value="false" selected="@(ViewBag.DestacadoFilter == false)">No</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label>&nbsp;</label>
                    <button type="submit" class="btn btn-primary form-control">Buscar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Color</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Destacado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Color</td>
            <td>$@item.Precio</td>
            <td>@item.Stock</td>
            <td>@(item.Destacado ? "⭐" : "")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No se encontraron zapatos con los filtros aplicados.</div>
}
