<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @{ var esAdmin = string.Equals(Context.Session.GetString("UsuarioRol"), "admin", StringComparison.OrdinalIgnoreCase); }
                @if (esAdmin)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">
                        <img src="~/images/logo.png" alt="Loma" height="40" />
                    </a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Productos" asp-action="Index">
                        <img src="~/images/logo.png" alt="Loma" height="40" />
                    </a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UsuarioNombre") != null)
                        {
                            @if (!esAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark position-relative" asp-controller="Carrito" asp-action="Index" title="Carrito">
                                        🛒
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="carrito-count" style="font-size: 0.7rem;">
                                            0
                                        </span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark position-relative" asp-controller="Favoritos" asp-action="Index" title="Mis Favoritos">
                                        ❤️
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="favoritos-count" style="font-size: 0.7rem;">
                                            0
                                        </span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Cuenta" asp-action="Index" title="Mi Cuenta">
                                        👤
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-muted">Hola, @Context.Session.GetString("UsuarioNombre")</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">🚪 Cerrar sesión</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">🔑 Iniciar sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Tienda de Zapatos Online
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Actualizar contador del carrito
        function actualizarContadorCarrito() {
            fetch('/Carrito/Contador')
                .then(response => response.json())
                .then(data => {
                    const badge = document.getElementById('carrito-count');
                    if (badge) {
                        badge.textContent = data.count;
                        badge.style.display = data.count > 0 ? 'inline-block' : 'none';
                    }
                })
                .catch(error => console.error('Error al actualizar contador del carrito:', error));
        }

        // Actualizar contador de favoritos
        function actualizarContadorFavoritos() {
            fetch('/Favoritos/Contador')
                .then(response => response.json())
                .then(data => {
                    const badge = document.getElementById('favoritos-count');
                    if (badge) {
                        badge.textContent = data.count;
                        badge.style.display = data.count > 0 ? 'inline-block' : 'none';
                    }
                })
                .catch(error => console.error('Error al actualizar contador de favoritos:', error));
        }

        // Ejecutar al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            actualizarContadorCarrito();
            actualizarContadorFavoritos();
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
