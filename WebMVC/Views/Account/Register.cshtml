@{
    ViewData["Title"] = "Registro";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-lg-4">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center">Crear cuenta</h2>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-3">
                        <label>Nombre</label>
                        <input type="text" name="nombre" class="form-control" required placeholder="Tu nombre" />
                    </div>
                    <div class="form-group mb-3">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" required placeholder="tucorreo@example.com" />
                    </div>
                    <div class="form-group mb-3">
                        <label>Contraseña</label>
                        <input type="password" name="password" class="form-control" required placeholder="••••••••" />
                    </div>
                    <div class="form-group mb-4">
                        <label>Confirmar contraseña</label>
                        <input type="password" name="passwordConfirm" class="form-control" required placeholder="Repite la contraseña" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Registrarme</button>
                </form>

                <div class="mt-3 text-center">
                    <a asp-action="Login" class="text-decoration-none">¿Ya tienes cuenta? Inicia sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>
